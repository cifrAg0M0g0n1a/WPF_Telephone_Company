<Window x:Class="DBAapp.Views.StreetsModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DBAapp.Views"
        mc:Ignorable="d"
        Title="Улицы" MinHeight="250" MinWidth="450" Height="250" Width="450" WindowStyle="ThreeDBorderWindow" Background="White" WindowStartupLocation="CenterScreen">
    <Grid x:Name="StreetsGrid">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <DataGrid x:Name="StreetsDataGrid" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Страна" Width="auto" Binding="{Binding country}"/>
                <DataGridTextColumn Header="Город" Width="auto" Binding="{Binding city}"/>
                <DataGridTextColumn Header="Улица" Width="auto" Binding="{Binding street}"/>
                <DataGridTextColumn Header="Количество абонентов" Width="auto" Binding="{Binding AbonentCount}"/>
            </DataGrid.Columns>
        </DataGrid>
        
    </Grid>
</Window>
